rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas de lectura pública para productos
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reglas de lectura pública para otros archivos
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

